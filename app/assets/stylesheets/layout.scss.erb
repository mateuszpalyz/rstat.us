@import "lib/base.css.scss";

body {
  background: $background_color;
  color: $text_color;
  min-width: 840px;
}

#header, #page, #footer {
  @include container();
}

.menu {
  @include clearfix;

  li {
    float: left;
    list-style-type: none;
    padding: 0 0.5em;
  }
}

/* *******************************/
/* Header */
/* *******************************/
#header-wrap {
  color: white;
  background: $header_color;
  margin-bottom: 1.5em;
  @include clearfix;

  #header {
    @include clearfix;
    #logo {
      float: left;
      padding: 1em $gutter_width/2;
      h1 {
        @include image-replaced("<%= asset_path 'embed/logo-sm.png' %>", 96px, 33px);
        margin: 0;
      }
    }
    .menu {
      margin-top: 1.75em;
      float: left;
    }

    #profile_menu {
      float: right;

      a {
        color: $de_emph_text_color;
      }
    }
  }
}

/* *******************************/
/* Main Content */
/* *******************************/
#content-wrap {
  @include column(14);
  @include rounded(4px);
  background: $content_background;
  padding-top: $gutter_width/2;
}

h2.title {
  padding: 0 $gutter_width;
}

#top {
  margin: 0 $gutter_width/2;
}
#content {
  @include content-block;
  margin-top: 0;
  .loading {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #ddd;
    opacity: 0.5;
  }

  .pagination {
    @include clearfix;
    margin: 0;

    .button {
      margin: 0;
      margin-top: 1em;
    }

    .loading-info {
      text-align: center;
      padding-top: 7px;
      p {
        margin: 0;
        span {
          padding-top: 1px;
          float: right;
          margin-left: -20px;
          cursor: pointer;
        }
      }
    }

    #next_button {
      float: right;
      margin-right: 0.5em;
    }
    #prev_button {
      float: left;
      margin-left: 0.5em;
    }
  }

  .popover {
    position: absolute;
    z-index: 1000;
    width: 230px;
    padding: 5px;
    border: 1px solid rgba(0,0,0,.2);
    border-radius: 6px;
    box-shadow: 0 5px 10px rgba(0,0,0,.2);
    background-color: #fff;

    .arrow {

      &,
      &:after {
        position: absolute;
        display: block;
        width: 0;
        height: 0;
        border-color: transparent;
        border-style: solid;
      }

      border-width: 11px;
      left: 50%;
      margin-left: -11px;
      border-bottom-width: 0;
      border-top-color: #999;
      border-top-color: rgba(0,0,0,.25);
      bottom: -11px;

      &:after {
        border-width: 10px;
        content: "";
        content: " ";
        bottom: 1px;
        margin-left: -10px;
        border-bottom-width: 0;
        border-top-color: #fff;
      }
    }
  }

  .scroll-help-popover {
    right: -102px;
    bottom: 60px;
  }
}

/* *******************************/
/* Sidebar */
/* *******************************/
#sidebar {
  @include column(6);
  @include last;

  .block {
    margin-left: 1em;
    padding-top: 1em;
    border-bottom: 1px solid #ccc;

  }
}

/* *******************************/
/* Footer */
/* *******************************/
#footer {
  #footer-wrap {
    padding: $gutter_width $gutter_width/2;
    @include clearfix;
  }
  #footer-logo {
    float: left;
    padding-right: 1em;
    border-right: 1px solid #ccc;
    margin-right: 0.5em;
  }
}
